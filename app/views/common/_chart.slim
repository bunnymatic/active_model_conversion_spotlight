/ expects "function" as a local variable which is the PeriodicFunction object
.chart id=function.id

javascript:
  $(function () {
    var noAxis = {
      gridLineWidth: 0, 
      minorGridLineWidth: 0, 
      lineColor: 'transparent',
      minorTickLength: 0,
      tickLength: 0,
      labels: {enabled: false}, 
      title: {text: ''}
    }; 
    $('##{function.id}').highcharts({
      title: {
        text: null
      },
      subtitle: {
        text: '&lambda;=#{function.display_wavelength} &fnof;=#{function.display_frequency}',
        useHTML: true,
      },
      xAxis: noAxis,
      yAxis: $.extend({min: (1.01*#{function.min}), max:(1.01*#{function.max})}, noAxis),
      legend: {
        enabled: false
      },
      tooltip: {
        enabled: false,
        formatter: function () {return '';}
      },
      series: [
        {
          color: '##{function.color || 'fc2'}',
          data: #{function.data.to_json}
        }
      ],
      credits: { enabled: false },
      plotOptions: {
        series: {
          marker: {
            fillColor: 'none',
            lineColor: null
          }
        }
      }

    });
  });
